@using CQRSDesingPattern.CQRSPattern.Results;
@model List<GetProductQueryResult>
@{
    Layout = null;
}
<a href="~/lib/bootstrap/dist/css/bootstrap.css.map"></a>
<a href="~/lib/bootstrap/dist/css/bootstrap.min.css.map"></a>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Açıklama</th>
            <th>Getir</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
            @foreach(var item in Model)
            {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.Name</td>
                <td>@item.Stock</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td><a href="/Default/GetProduct/@item.ProductID" class="btn btn-dark">Getir</a></td>
                <td><a href="/Default/DeleteProduct/@item.ProductID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Default/UpdateProduct/@item.ProductID" class="btn btn-warning">Güncelle</a></td>
            </tr>
            }
    </table>
    <a href="/Default/AddProduct/" class="btn btn-primary">Yeni Ürün Girişi</a>
</div>